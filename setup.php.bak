/**
 * Script de configuration initiale
 * CrÃ©e un utilisateur admin avec credentials connus
 */
require_once 'db.php';

// ParamÃ¨tres par dÃ©faut
$email = 'admin@nextmux.com';
$password = 'Admin123';
$nom = 'Administrateur SystÃ¨me';

if ($_POST) {
    // Traiter le formulaire
    $email = trim($_POST['email'] ?? '');
    $password = $_POST['password'] ?? '';
    $nom = trim($_POST['nom'] ?? '');
    $confirm_password = $_POST['confirm_password'] ?? '';

    $errors = [];

    if (!$email) $errors[] = 'Email requis';
    if (!$password) $errors[] = 'Mot de passe requis';
    if (!$nom) $errors[] = 'Nom requis';
    if ($password !== $confirm_password) $errors[] = 'Les mots de passe ne correspondent pas';
    if (strlen($password) < 6) $errors[] = 'Minimum 6 caractÃ¨res pour le mot de passe';

    if (!$errors) {
        try {
            $db = getDB();

            // VÃ©rifier si l'email existe dÃ©jÃ 
            $stmt = $db->prepare('SELECT id FROM utilisateurs WHERE email = ?');
            $stmt->execute([$email]);
            if ($stmt->fetch()) {
                $errors[] = 'Cet email existe dÃ©jÃ ';
            } else {
                // CrÃ©er l'utilisateur
                $hash = password_hash($password, PASSWORD_DEFAULT);
                $stmt = $db->prepare('INSERT INTO utilisateurs (nom, email, mdp) VALUES (?, ?, ?)');
                $stmt->execute([$nom, $email, $hash]);

                $success = "âœ“ Utilisateur crÃ©Ã© avec succÃ¨s !<br><strong>Email:</strong> $email<br><strong>Mot de passe:</strong> " . htmlspecialchars($password);
                $_POST = []; // RÃ©initialiser le formulaire
            }
        } catch (Exception $e) {
            $errors[] = 'Erreur : ' . $e->getMessage();
        }
    }
}
